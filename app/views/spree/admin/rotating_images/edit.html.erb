<% content_for :page_title do %>
   <%= Spree.t(:editing) %>: <%= @rotating_image.name %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_rotating_images), spree.admin_rotating_images_url, :icon => 'arrow-left' %>
<% end %>

<%= render "spree/shared/error_messages", :target => @rotating_image %>

<%= form_for [:admin, @rotating_image] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => f %>
    <%= image_tag(@rotating_image.image.url, class: 'img-responsive img-thumbnail') %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>

